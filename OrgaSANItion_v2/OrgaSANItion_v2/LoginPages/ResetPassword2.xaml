<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrgaSANItion_v2.LoginPages.ResetPassword2"
             BackgroundColor="white">
    <ContentPage.Content>
        <StackLayout Margin="25,35">
            <Label Text="Passwort zurücksetzen"
                    VerticalOptions="Start" 
                    HorizontalTextAlignment="Center"
                    FontSize="40"/>
            <!--Entry neues Passwort-->
            <Entry Placeholder="Dein neues Passwort"
                   IsPassword="True"
                   FontSize="18"
                   Margin="0,40,0,0"/>
            <!--Entry Passwort wiederholen-->
            <Entry Placeholder="Dein neues Passwort wiederholen"
                   IsPassword="True"
                   FontSize="18"
                   Margin="0,10,0,0"/>
            <!--Entry Code-->
            <Entry Placeholder="6-stelliger Code"
                   Keyboard="Numeric"
                   FontSize="18"
                   Margin="0,10,0,0"/>
            <!--Button Weiter-->
            <Button Text="Weiter"
                    FontSize="18"
                    x:Name="btn_weiter"
                    Clicked="btn_weiter_Clicked"
                    Margin="0,20,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>